---
import Layout from "../layouts/Layout.astro";
import MainSection from "../components/MainSection.astro";
import BirthDaySection from "../components/BirthDaySection.astro";
import ConfirmationSection from "../components/ConfirmationSection.astro";
---

<Layout title="Cumple de Isabella">
  <main>
    <section>
      <ConfirmationSection />
    </section>
    <section>
      <MainSection />
    </section>
    <section>
      <BirthDaySection />
    </section>
  </main>
</Layout>

<style>
  main {
    height: 100vh;

    overflow-x: hidden;
    overflow-y: scroll;
    scroll-snap-type: y mandatory;
  }
  section {
    width: 100dvw;
    height: 100vh;

    scroll-snap-align: center;
  }
</style>
