---
import Dialog from "./Dialog.astro";
---

<section>
  <div class="container">
    <div class="img-container">
      <img
        id="rainbow"
        class="img-isu animate__animated"
        src="/img/rainbow.png"
        alt="rainbow"
      />
      <Dialog
        id="dialog"
        message="El 18 de Mayo, a las 20hs festejo mi bautismo y cumple"
        side="right"
      />
      <img
        id="img-isu"
        class="img-isu animate__animated"
        src="/img/Isu_3.png"
        alt="isu"
      />
    </div>
  </div>
</section>

<style>
  .container {
    background: radial-gradient(circle, white, var(--yellow));
  }

  .img-container {
    width: 30rem;
    height: 100%;
    position: relative;
  }

  .img-isu {
    height: 80%;
    filter: drop-shadow(5px 5px 5px gray);
    margin: auto;

    position: absolute;
    right: -5rem;
    bottom: 0;
  }
</style>

<script>
  const imgIsu = document.querySelector("#img-isu");

  const observer = new IntersectionObserver((entries) => {
    // Loop over the entries
    entries.forEach((entry) => {
      // If the element is visible
      if (entry.isIntersecting) {
        // Add the animation class
        if (imgIsu) {
          imgIsu.classList.add("animate__slideInRight");
        }

        const dialog = document.querySelector("#dialog");
        if (dialog) {
          dialog.classList.add("animate__fadeIn");
        }

        const rainbow = document.querySelector("#rainbow");
        if (rainbow) {
          rainbow.classList.add("animate__rotateInDownLeft");
        }
      }
    });
  });

  if (imgIsu) {
    observer.observe(imgIsu);
  }
</script>
