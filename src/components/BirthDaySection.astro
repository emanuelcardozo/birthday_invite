<div class="birthday-container">
  <div class="img-container">
    <img
      id="rainbow"
      class="img-isu animate__animated"
      src="/img/rainbow.png"
      alt="rainbow"
    />
    <div id="dialog" class="dialog animate__delay-1s animate__animated">
      <p>Hola, el 18 de Mayo, a las 20hs festejo mi cumple</p>
    </div>
    <img
      id="img-isu"
      class="img-isu animate__animated"
      src="/img/Isu_3.png"
      alt="isu"
    />
  </div>
</div>

<style>
  .birthday-container {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;

    background: radial-gradient(circle, white, var(--yellow));

    position: relative;
  }

  .img-container {
    width: 30rem;
    height: 100%;
    /* background-image: url("/img/wave_container.png");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover; */

    position: relative;
  }

  .dialog {
    width: 75%;
    background-color: white;
    border: 4px solid black;
    border-radius: 2rem;
    padding: 0.5rem 1rem;
    margin: 1rem;

    position: relative;

    opacity: 0;
  }

  .dialog::after {
    width: 40px;
    height: 40px;
    content: "";
    background-color: white;

    border-left: 4px solid black;
    border-bottom: 4px solid black;
    transform: rotate(-45deg) skew(-10deg, -10deg);

    position: absolute;
    bottom: -1.6rem;
    right: 5rem;
  }

  .dialog p {
    font-size: 1.5rem;
  }

  .img-isu {
    height: 80%;
    filter: drop-shadow(5px 5px 5px gray);
    margin: auto;

    position: absolute;
    right: -5rem;
    bottom: 0;
  }
</style>

<script is:inline>
  const observer = new IntersectionObserver((entries) => {
    // Loop over the entries
    entries.forEach((entry) => {
      // If the element is visible
      if (entry.isIntersecting) {
        // Add the animation class
        document
          .querySelector("#img-isu")
          .classList.add("animate__slideInRight");

        document.querySelector("#dialog").classList.add("animate__fadeIn");

        document
          .querySelector("#rainbow")
          .classList.add("animate__rotateInDownLeft");
      }
    });
  });

  observer.observe(document.querySelector("#img-isu"));
</script>
