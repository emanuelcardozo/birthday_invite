---
interface Props {
  id: string;
}

const { id } = Astro.props;
---

<div class="arrow_container animate__animated animate__pulse">
  <div id={id} class="arrow animate__animated animate__pulse hided"></div>
</div>

<style>
  .hided {
    opacity: 0;
    display: none;
  }
  .arrow_container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 2rem;
  }

  .arrow {
    width: 1rem;
    height: 1rem;
    color: transparent;

    display: flex;
    position: relative;
  }

  .arrow::before {
    content: "";
    width: 0.5rem;
    height: 0.5rem;
    color: transparent;
    border-bottom: 0.25rem solid white;
    border-right: 0.25rem solid white;
    box-shadow: 2px 2px var(--dark-pink);

    position: absolute;
    top: -1rem;

    transform: rotate(45deg);
    animation: slide1 2s ease 1s infinite;
  }

  .arrow::after {
    content: "";
    width: 0.5rem;
    height: 0.5rem;
    color: transparent;
    border-bottom: 0.25rem solid white;
    border-right: 0.25rem solid white;
    box-shadow: 2px 2px var(--dark-pink);

    position: absolute;
    top: 1rem;
    transform: rotate(45deg);

    animation: slide2 2s ease 1.05s infinite;
  }

  @keyframes slide1 {
    from {
      top: -1rem;
    }

    to {
      top: 1rem;
    }
  }

  @keyframes slide2 {
    from {
      top: 0rem;
    }

    to {
      top: 2rem;
    }
  }
</style>
