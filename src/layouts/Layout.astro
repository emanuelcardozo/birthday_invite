---
import "animate.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <script
      is:inline
      src="https://cdn.jsdelivr.net/gh/peterhry/CircleType@2.3.1/dist/circletype.min.js"
    ></script>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --pink: #fdcae1;
    --dark-pink: #d46195;

    --yellow: #fdfd96;
    --dark-yellow: #ecec60;
  }

  body {
    background-color: var(--pink);
    overflow: hidden;
    margin: 0;
    padding: 0;
  }
</style>
